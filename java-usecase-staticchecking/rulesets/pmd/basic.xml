<?xml version="1.0"?>

<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         name="Basic"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">
    <description>
        The Basic ruleset contains a collection of good practices which should be followed.
    </description>

    <!-- Rules, that have been moved into a category -->
    <rule ref="category/java/errorprone.xml/AvoidBranchingStatementAsLastInLoop" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/AvoidDecimalLiteralsInBigDecimalConstructor" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/AvoidMultipleUnaryOperators" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/AvoidUsingOctalValues" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/BrokenNullCheck" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/CheckSkipResult" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/ClassCastExceptionWithToArray" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/DontUseFloatTypeForLoopIndices" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/JumbledIncrementer" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/MisplacedNullCheck" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/OverrideBothEqualsAndHashcode" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/ReturnFromFinallyBlock" deprecated="false"/>
    <rule ref="category/java/errorprone.xml/UnconditionalIfStatement" deprecated="false"/>

    <rule ref="category/java/multithreading.xml/AvoidThreadGroup" deprecated="false"/>
    <rule ref="category/java/multithreading.xml/DontCallThreadRun" deprecated="false"/>
    <rule ref="category/java/multithreading.xml/DoubleCheckedLocking" deprecated="false"/>

    <rule ref="category/java/bestpractices.xml/AvoidUsingHardCodedIP" deprecated="false"/>
    <rule ref="category/java/bestpractices.xml/CheckResultSet" deprecated="false"/>

    <rule ref="category/java/codestyle.xml/ExtendsObject" deprecated="false"/>
    <rule ref="category/java/codestyle.xml/ForLoopShouldBeWhileLoop" deprecated="false"/>

    <rule ref="category/java/performance.xml/BigIntegerInstantiation" deprecated="false"/>
    <rule ref="category/java/performance.xml/BooleanInstantiation" deprecated="false"/>

    <rule ref="category/java/design.xml/CollapsibleIfStatements" deprecated="false"/>
    <rule ref="category/java/design.xml/SimplifiedTernary" deprecated="false"/>

</ruleset>